<%= form_tag charges_path, {:style => "text-align: center;margin-top:250px;" } do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $<%=@trade["fiat_amount_requested"]%></span><br/>
      <span>Paying to: <%=@trade["seller"]["username"]%></span><br/>
      <span>Bitcoins you will get: <%=@trade["seller_fee_crypto_amount"].to_f/1000000%></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Purchasing Bitcoin for"+<%=@trade["fiat_amount_requested"]%>
          data-amount="<%=@trade["fiat_amount_requested"].to_i*100%>"
          data-locale="auto"></script>
<% end %>
